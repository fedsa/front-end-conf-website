---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
---

<section class="content--container">
  <h1>Tagged <span class="post--block-tag">“{{ tag }}”</span></h1>
  <div class="posts--container">
  {% set postslist = collections[ tag ] %}
  {% include "components/postslist.njk" %}
  </div>
  <nav>
    <a href="{{ '/blog/' | url }}">← Blog index</a>
  </nav>
</section>