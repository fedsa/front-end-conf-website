---
layout: layouts/base.njk
section: post
---


<section class="content--container">
  <article class="textual--content">

    <h1>{{ title }}</h1>
    <p>
      <small>
        <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
      </small>
    </p>

    {{ layoutContent | safe }}

    {% if tags %}
      <p>
      <small>
        Tagged with:
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag" class="post--block-tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </small>
      </p>
    {% endif %}

  </article>

  <nav>
    <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
  </nav>
</section>